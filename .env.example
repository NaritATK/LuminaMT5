NODE_ENV=development
API_PORT=3000
DASHBOARD_PORT=3001
DATABASE_URL=postgresql://lumina:lumina@localhost:5432/luminamt5
REDIS_URL=redis://localhost:6379
JWT_SECRET=replace_me

# API auth (comma-separated secret:role)
# roles: admin | operator | viewer
AUTH_API_KEYS=change-me-admin-key:admin
AUTH_BEARER_TOKENS=

# MT5
MT5_BROKER=
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=
MT5_TERMINAL_PATH=
# executor safety gate (must be true + DRY_RUN=false for live path)
MT5_ENABLE_LIVE=false
DRY_RUN=true

# Chat Integrations
TELEGRAM_BOT_TOKEN=
# Telegram webhook ingress hardening
# Secret used by Telegram header: X-Telegram-Bot-Api-Secret-Token
TELEGRAM_WEBHOOK_SECRET=
# true by default in production, false in non-production
TELEGRAM_WEBHOOK_REQUIRE_SECRET=true
DISCORD_BOT_TOKEN=
IMESSAGE_ENABLED=false
